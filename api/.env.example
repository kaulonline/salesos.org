# Server
PORT=4000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://iris:iris@localhost:5432/iris_sales?schema=public"

# ==================== LITELLM UNIFIED LLM GATEWAY ====================
# LiteLLM provides a unified API for 100+ LLM providers
# Docs: https://docs.litellm.ai/docs/
USE_LITELLM_PROXY=true
LITELLM_BASE_URL=http://localhost:4001
LITELLM_API_KEY=sk-litellm-master-key
LITELLM_MASTER_KEY=sk-litellm-master-key

# Default models (aliases defined in litellm/config.yaml)
LLM_DEFAULT_MODEL=claude-sonnet
LLM_FAST_MODEL=claude-haiku
LLM_MAX_RETRIES=3
LLM_TIMEOUT=120000

# ==================== LLM PROVIDERS (for LiteLLM) ====================

# Azure AI Foundry - Anthropic (Primary)
ANTHROPIC_API_KEY=your-azure-ai-foundry-key
ANTHROPIC_ENDPOINT=https://your-resource.services.ai.azure.com/anthropic
ANTHROPIC_DEPLOYMENT_NAME=claude-sonnet-4-5-2
ANTHROPIC_SMALL_MODEL=claude-haiku-4-5
USE_ANTHROPIC=true

# Azure OpenAI (Alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-key

# Direct OpenAI (Fallback)
OPENAI_API_KEY=sk-your-openai-key

# Groq (Ultra-fast inference)
GROQ_API_KEY=

# Deepseek (Cost-effective reasoning)
DEEPSEEK_API_KEY=

# Google Gemini
GOOGLE_API_KEY=

# ==================== SALESFORCE INTEGRATION ====================
# Create a Connected App in Salesforce Setup
# Callback URL should be: http://localhost:4000/api/salesforce/oauth/callback

SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_CALLBACK_URL=http://localhost:4000/api/salesforce/oauth/callback
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_API_VERSION=v59.0
# Encryption key for storing tokens (auto-generated from JWT_SECRET if not set)
SALESFORCE_ENCRYPTION_KEY=

# ==================== MEETING INTELLIGENCE ====================

# Zoom API (for scheduling and recording meetings)
ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_WEBHOOK_SECRET=

# Zoom Meeting SDK (for bot joining meetings)
# Get SDK credentials from https://marketplace.zoom.us/
ZOOM_SDK_KEY=
ZOOM_SDK_SECRET=

# Microsoft Teams / Graph API (for Teams meetings)
TEAMS_TENANT_ID=
TEAMS_CLIENT_ID=
TEAMS_CLIENT_SECRET=

# Google Meet / Workspace API
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=

# Azure OpenAI Whisper (for transcription)
AZURE_WHISPER_ENDPOINT=
AZURE_WHISPER_DEPLOYMENT=whisper
AZURE_WHISPER_API_KEY=

# OpenAI Whisper (fallback for transcription)
OPENAI_API_KEY=
